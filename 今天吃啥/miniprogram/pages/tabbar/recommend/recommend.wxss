/* pages/tabbar/recommend/recommend.wxss */
page{
  background: linear-gradient(#04C09E, white);
  height: 100%;
  border: 0px;
}

.top_bar{
  display: flex;
  flex-direction: row;
}

.search_bar{
  background-color: white;
  width: 80%;
  border: 1px solid #d0d0d0;
  border-radius: 50rpx;
  margin-left: 40rpx;
  margin-top: 10rpx;
}

.search_icon{
  margin-left: 10rpx;
  margin-top: 10rpx;
  position: absolute;  
  z-index: 2;  
  width: 20px;  
  height: 20px;  
  text-align: center; 
}

.search_bar input{
  /* margin-left: 50rpx; */
  height: 60rpx;
  margin-top: 8rpx;
  border-radius: 5px;
  margin-left: 70rpx;
}

.ph_class{
  color: #afabab;
  font-size: 30rpx;
}

.weather_bar{
  width: 20%;
  margin-left: 20rpx;
  margin-top: 10rpx;
}

.pos{
  font-size: 30rpx;
}

.tem{
  font-size: 25rpx;
  color: #dfdfdf;
}

.arrow_down{
  width: 20rpx;
  text-align: center;
  /* margin-left: 1rpx; */
}

.recommend_text{
  margin-top: 50rpx;
  margin-left: 25rpx;
  margin-right: 25rpx;
}

.rt_title{
  font-size: 40rpx;
}

.rt_body{
  margin-top: 20rpx;
  font-size: 35rpx;
}

.recommend_context{
  margin-top: 40rpx;
  margin-left: 25rpx;
  margin-right: 25rpx;
  position: relative;
}

.recommend_context image{
  border-radius: 40rpx;
  width: 100%;
  height: 700rpx;
}

.rc_title{
  position: absolute;
  top: 40rpx;
  left: 50rpx;
  font-size: 50rpx;
  color: white;
  text-shadow: 3rpx 3rpx black;
  font-weight: bold;
}

.rc_type{
  position: absolute;
  top: 500rpx;
  left: 50rpx;
  font-size: 40rpx;
  color: white;
  text-shadow: 3rpx 3rpx black;
}

.rc_effect{
  position: absolute;
  top: 570rpx;
  left: 50rpx;
  font-size: 35rpx;
  color: white;
  text-shadow: 3rpx 3rpx black;
}

.rc_steps{
  position: absolute;
  top: 620rpx;
  left: 50rpx;
  font-size: 35rpx;
  color: white;
  text-shadow: 3rpx 3rpx black;
}