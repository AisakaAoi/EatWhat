/* pages/tabbar/recommend/recommend.wxss */
page{
  background: white;
  height: 100%;
  border: 0px;
}

.top-bar{
  background: #04C09E;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.search-bar{
  background-color: white;
  width: 60%;
  border: 1px solid #d0d0d0;
  border-radius: 50rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.search-icon{
  margin-left: 10rpx;
  position: absolute;
  top: 19rpx;
}

.search-bar input{
  /* margin-left: 50rpx; */
  height: 60rpx;
  border-radius: 5px;
  margin-left: 70rpx;
  margin-right: 100rpx;
}

.ph-class{
  color: #afabab;
  font-size: 30rpx;
}

.weather-bar{
  margin-right: 20rpx;
  margin-top: 10rpx;
  justify-content: right;
}

.pos{
  font-size: 30rpx;
  margin-right: 10rpx;
}

.weather-info{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.tem{
  font-size: 25rpx;
  color: #dfdfdf;
  justify-content: right;
  margin-right: 10rpx;
}

.cloud{
  font-size: 25rpx;
  color: #dfdfdf;
}

.arrow-down{
  width: 20rpx;
  justify-content: right;
}

.recommend-text{
  margin-top: 20rpx;
  margin-left: 25rpx;
  margin-right: 25rpx;
}

.rt-title{
  font-size: 40rpx;
}

.rt-body{
  margin-top: 20rpx;
  font-size: 35rpx;
}

.recommend-context{
  margin-top: 30rpx;
  margin-left: 25rpx;
  margin-right: 25rpx;
  position: relative;
}

.rc-img{
  border-radius: 40rpx;
  width: 100%;
  height: 650rpx;
}

.rc-title{
  position: absolute;
  top: 80rpx;
  left: 50rpx;
  font-size: 50rpx;
  color: white;
  text-shadow: 3rpx 3rpx black;
  font-weight: bold;
}

.rc-type{
  position: absolute;
  margin-right: 30rpx;
  top: 550rpx;
  right: 0;
  bottom: 0;
  text-align: right;
  font-size: 40rpx;
  color: white;
  text-shadow: 3rpx 3rpx black;
}

.rc-des{
  position: absolute;
  top: 35rpx;
  left: 50rpx;
  font-size: 30rpx;
  color: white;
  text-shadow: 3rpx 3rpx black;
}

.rc-fav{
  position: absolute;
  width: 60rpx;
  top: 550rpx;
  left: 50rpx;
}

.nomore{
  height: 100rpx;
  margin-top: 30rpx;
  margin-bottom: 50rpx;
  text-align: center;
  color: #d0d0d0;
}