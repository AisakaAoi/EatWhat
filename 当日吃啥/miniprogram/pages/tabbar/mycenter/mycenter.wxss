/* pages/tabbar/mycenter/mycenter.wxss */
.userinfo-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #ffffff;
  width: 100%;
}
.userinfo-avatar{
  width: 120rpx;
  height: 120rpx;
  margin: 40rpx;
  border-radius: 50%;
  overflow: hidden;
}
.userinfo-nickname{
  color: black;
  margin-bottom: 40rpx;
  background-color: rgb(0, 0, 0, 0);
}

.person-list {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.list-item {
  width: 100% !important;
  height: 100rpx;
  display: flex;
  align-items: center;
  padding: 0rpx;
  background-color: white;
  border-bottom: 2rpx solid lightgray;
}

.item-image {
  width: 50rpx;
  margin: 40rpx;
}

.item-text {
  color: gray;
  font-size: 30rpx;
  font-weight: normal;
  margin-left: 10rpx;
}

.item-arrow {
  width: 40rpx;
  position: absolute;
  right: 0;
  margin-right: 20rpx;
}
