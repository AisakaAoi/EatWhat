/* pages/help/helpcenter/helpcenter.wxss */
.title{
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  margin-left: 30rpx;
  color: gray;
  font-size: 35rpx;
  font-weight: normal;
}

.person-list {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.list-item {
  width: 100% !important;
  height: 100rpx;
  display: flex;
  align-items: center;
  padding: 0rpx;
  background-color: white;
  border-bottom: 2rpx solid lightgray;
}

.item-text {
  color: gray;
  font-size: 35rpx;
  font-weight: normal;
  margin-left: 30rpx;
}

.item-arrow {
  width: 40rpx;
  position: absolute;
  right: 0;
  margin-right: 20rpx;
}
