/* pages/detail/detail.wxss */

.detail-title{
  margin-top: 40rpx;
  margin-left: 40rpx;
}

.title-name{
  font-size: 40rpx;
}

.title-des{
  margin-top: 20rpx;
  display: flex;
  align-items: center;
}

.title-des image{
  width: 30rpx;
}

.title-des text{
  margin-left: 20rpx;
  font-size: 25rpx;
}

.title-favorite{
  margin-top: 20rpx;
  display: flex;
  align-items: center;
}

.title-favorite image{
  width: 40rpx;
  margin-right: 10rpx;
}

.title-favorite text{
  font-size: 28rpx;
}

.divLine{
  margin-top: 20rpx;
  width: 95%;
  border-top: 1rpx dashed  #777777;
}

.detail-list{
  margin-top: 20rpx;
  margin-left: 40rpx;
}

.list-title{
  width: 100%;
  display: flex;
  align-items: center;
}

.list-add{
  margin-top: 10rpx;
  position: absolute;
  display: flex;
  right: 40rpx;
  width: 150rpx;
  height: 50rpx;
  background: #cecece;
  border-radius: 30rpx 30rpx 30rpx 30rpx;
}

.list-add view{
  color: #686767;
  text-align: center;
  justify-content: center;
  width: 50%;
}

.list{
  margin-top: 30rpx;
}

.list-item{
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  width: 100%;
  display: flex;
  font-size: 27rpx;
}

.item-left{
  width: 50%;
}

.item-right{
  display: flex;
  position: absolute;
  right: 40rpx;
}

.divLine-below{
  width: 95%;
  border-top: 1rpx dashed  #777777;
  
}

.analysis-panel{
  height: 200rpx;
  width: 90%;
  background: #dddddd;
  margin-top: 30rpx;
  margin-left: 40rpx;
  border-radius: 15rpx;
}

.panel-row{
  width: 90%;
  margin-left: 30rpx;
  margin-top: 35rpx;
  display: flex;
  align-items: center;
}

.panel-item{
  width: 50%;
  display: flex;
  align-items: center;
}

.panel-icon{
  width: 50rpx;
}

.panel-item text{
  color: #8a8a8a;
  margin-left: 25rpx;
}

.step-panel{
  margin-left: 40rpx;
  margin-top: 30rpx;
  margin-bottom: 100rpx;
  border-radius: 10rpx;
  width: 90%;
  height: 200rpx;
  background: #dddddd;
}

.step{
  margin-left: 40rpx;
  margin-top: 30rpx;
  font-size: 40rpx;
}

swiper{
  height: 200rpx;
}

.swiper-item{
  width: 180rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.swiper-item text{
  margin-right: 20rpx;
  margin-left: 20rpx;
}
