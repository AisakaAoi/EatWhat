/* pages/scan/scan.wxss */
.veg-title{
  margin-top: 30rpx;
  width: 100%;
  text-align: center;
  font-size: 40rpx;
}

.veg-pic{
  margin-top: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.veg-pic image{
  width: 650rpx;
  height: 600rpx;
  border-radius: 20rpx;
}

.rec-title{
  margin-left: 50rpx;
  margin-top: 30rpx;
}

.recommend-context{
  display: flex;
  margin-top: 40rpx;
  margin-left: 40rpx;
  margin-right: 40rpx;
  height: 600rpx;
  position: relative;
}

.rc-img{
  border-radius: 40rpx;
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.rc-title{
  position: absolute;
  top: 80rpx;
  left: 50rpx;
  font-size: 50rpx;
  color: white;
  text-shadow: 3rpx 3rpx black;
  font-weight: bold;
}

.rc-type{
  position: absolute;
  margin-right: 30rpx;
  top: 520rpx;
  right: 0;
  bottom: 0;
  text-align: right;
  font-size: 40rpx;
  color: white;
  text-shadow: 3rpx 3rpx black;
}

.rc-des{
  position: absolute;
  top: 35rpx;
  left: 50rpx;
  font-size: 30rpx;
  color: white;
  text-shadow: 3rpx 3rpx black;
  display: inline-block;
  white-space: nowrap; 
  width: 90%; 
  overflow: hidden;
  text-overflow: ellipsis;
}

.rc-fav{
  position: absolute;
  width: 60rpx;
  top: 520rpx;
  left: 50rpx;
}

.nomore{
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  text-align: center;
  color: #d0d0d0;
}